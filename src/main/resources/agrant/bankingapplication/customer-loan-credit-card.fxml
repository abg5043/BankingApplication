<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <VBox alignment="CENTER" prefHeight="433.0" prefWidth="953.0" spacing="25.0">
            <children>
            <Label text="Account Info">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <TextArea fx:id="accountInfoArea" prefHeight="80.0" prefWidth="853.0">
               <VBox.margin>
                  <Insets left="50.0" right="50.0" />
               </VBox.margin>
            </TextArea>
            <Label layoutX="434.0" layoutY="161.0" text="Either Make Purchase or Enter Amount Below to Pay">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <TextField fx:id="moneyField" promptText="Enter dollar amount (e.g. 5.00)">
               <VBox.margin>
                  <Insets left="250.0" right="250.0" />
               </VBox.margin>
            </TextField>
            </children>
        </VBox>
    </center>
    <top>
        <BorderPane prefHeight="60.0" prefWidth="753.0" BorderPane.alignment="CENTER">
            <center>
                <HBox alignment="CENTER" BorderPane.alignment="CENTER">
                    <children>
                        <Label fx:id="welcomeLabel" alignment="CENTER" prefHeight="29.0" prefWidth="252.0" text="Welcome, (Name)!">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
            </center>
            <right>
                <Button fx:id="exitButton" mnemonicParsing="false" onAction="#exitClicked" text="Save and Exit" BorderPane.alignment="CENTER">
                    <font>
                        <Font size="16.0" />
                    </font>
                    <BorderPane.margin>
                        <Insets right="30.0" />
                    </BorderPane.margin>
                    <padding>
                        <Insets bottom="10.0" left="16.0" right="16.0" top="10.0" />
                    </padding>
                </Button>
            </right>
            <left>
                <Button fx:id="mainPageButton" mnemonicParsing="false" onAction="#mainPageClicked" text="Back to Main" BorderPane.alignment="CENTER">
                    <font>
                        <Font size="16.0" />
                    </font>
                    <padding>
                        <Insets bottom="10.0" left="16.0" right="16.0" top="10.0" />
                    </padding>
                    <BorderPane.margin>
                        <Insets left="30.0" />
                    </BorderPane.margin>
                </Button>
            </left>
            <padding>
                <Insets top="30.0" />
            </padding>
        </BorderPane>
    </top>
    <bottom>
        <HBox alignment="CENTER" prefWidth="953.0" spacing="50.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="makePurchaseButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#makePurchaseClicked" text="Make Purchase" textAlignment="CENTER">
                    <font>
                        <Font size="16.0" />
                    </font>
                    <padding>
                        <Insets bottom="10.0" left="16.0" right="16.0" top="10.0" />
                    </padding>
                </Button>
            <HBox prefHeight="100.0" prefWidth="361.0">
               <children>
                  <BorderPane prefHeight="100.0" prefWidth="376.0" style="-fx-border-color: black; -fx-border-width: 1; -fx-border-style: solid;">
                     <right>
                            <Button fx:id="oneTimePay" alignment="CENTER" mnemonicParsing="false" onAction="#oneTimePayClicked" prefHeight="45.0" prefWidth="191.0" text="One-Time Payment" textAlignment="CENTER" BorderPane.alignment="CENTER">
                                <font>
                                    <Font size="16.0" />
                                </font>
                                <padding>
                                    <Insets bottom="10.0" left="16.0" right="16.0" top="10.0" />
                                </padding>
                            </Button>
                     </right>
                     <left>
                            <Button fx:id="payInFullButton" alignment="CENTER" mnemonicParsing="false" onAction="#payInFullClicked" prefHeight="45.0" prefWidth="117.0" text="Pay in Full" textAlignment="CENTER" BorderPane.alignment="CENTER">
                                <font>
                                    <Font size="16.0" />
                                </font>
                                <padding>
                                    <Insets bottom="10.0" left="16.0" right="16.0" top="10.0" />
                                </padding>
                            </Button>
                     </left>
                     <top>
                        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="35.0" prefWidth="202.0" text="Make Payment" textAlignment="CENTER" BorderPane.alignment="CENTER">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                     </top>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </BorderPane>
               </children>
            </HBox>
            </children>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
            <padding>
                <Insets bottom="15.0" top="15.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>

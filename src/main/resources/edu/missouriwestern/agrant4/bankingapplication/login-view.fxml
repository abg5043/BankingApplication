<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox alignment="CENTER" prefHeight="450.0" prefWidth="753.0" spacing="25.0">
         <children>
            <Label fx:id="testLabel" alignment="CENTER" prefHeight="29.0" prefWidth="252.0" text="Welcome! Please Login">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <TextField fx:id="userNameField" promptText="Username">
               <VBox.margin>
                  <Insets left="200.0" right="200.0" />
               </VBox.margin>
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
            <TextField fx:id="passwordField" promptText="Password">
               <VBox.margin>
                  <Insets left="200.0" right="200.0" />
               </VBox.margin>
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
            <HBox alignment="CENTER" spacing="50.0">
               <children>
                  <Button fx:id="customerButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#customerClicked" text="Customer">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
                  <Button fx:id="managerButton" alignment="CENTER" mnemonicParsing="false" onAction="#managerClicked" text="Manager">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
                  <Button fx:id="tellerButton" alignment="CENTER" mnemonicParsing="false" onAction="#tellerClicked" text="Teller">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <top>
      <BorderPane prefHeight="60.0" prefWidth="753.0" BorderPane.alignment="CENTER">
         <right>
            <Button fx:id="exitButton" mnemonicParsing="false" onAction="#exitClicked" text="Exit" BorderPane.alignment="CENTER">
               <font>
                  <Font size="16.0" />
               </font>
               <BorderPane.margin>
                  <Insets right="20.0" />
               </BorderPane.margin>
            </Button>
         </right>
      </BorderPane>
   </top>
   <bottom>
      <Pane prefHeight="63.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>

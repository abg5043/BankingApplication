<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox alignment="CENTER" prefHeight="433.0" prefWidth="953.0" spacing="25.0">
         <children>
            <Label text="Enter Account Info">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Label text="Customer SSN">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <TextField fx:id="ssnField" promptText="9 Integers">
               <VBox.margin>
                  <Insets left="250.0" right="250.0" />
               </VBox.margin>
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
            <Label text="Starting Balance">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <TextField fx:id="startingBalanceField" promptText="E.g., 999.20">
               <VBox.margin>
                  <Insets left="250.0" right="250.0" />
               </VBox.margin>
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
            <Label layoutX="432.0" layoutY="265.0" text="Interest Rate">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <TextField fx:id="interestRateField" layoutX="260.0" layoutY="310.0" promptText="E.g., 1.2">
               <font>
                  <Font size="16.0" />
               </font>
               <VBox.margin>
                  <Insets left="250.0" right="250.0" />
               </VBox.margin>
            </TextField>
         </children>
      </VBox>
   </center>
   <top>
      <BorderPane prefHeight="60.0" prefWidth="753.0" BorderPane.alignment="CENTER">
         <center>
            <HBox alignment="CENTER" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="welcomeLabel" alignment="CENTER" prefHeight="29.0" prefWidth="252.0" text="Welcome, (Name)!">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </center>
         <padding>
            <Insets top="30.0" />
         </padding>
         <right>
            <Button fx:id="exitButton" mnemonicParsing="false" onAction="#exitClicked" text="Save and Exit" BorderPane.alignment="CENTER">
               <font>
                  <Font size="16.0" />
               </font>
               <BorderPane.margin>
                  <Insets right="30.0" />
               </BorderPane.margin>
               <padding>
                  <Insets bottom="10.0" left="16.0" right="16.0" top="10.0" />
               </padding>
            </Button>
         </right>
         <left>
            <Button fx:id="mainPageButton" mnemonicParsing="false" onAction="#mainPageClicked" text="Back to Login" textAlignment="CENTER" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets left="30.0" />
               </BorderPane.margin>
               <font>
                  <Font size="16.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="16.0" right="16.0" top="10.0" />
               </padding>
            </Button>
         </left>
      </BorderPane>
   </top>
   <bottom>
      <HBox alignment="CENTER" spacing="50.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="savingsButton" mnemonicParsing="false" onAction="#savingsClicked" text="Create Savings">
               <font>
                  <Font size="16.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="16.0" right="16.0" top="10.0" />
               </padding>
            </Button>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <BorderPane.margin>
            <Insets left="20.0" right="20.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="30.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>

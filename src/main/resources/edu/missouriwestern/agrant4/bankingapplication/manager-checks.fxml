<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox alignment="CENTER" prefHeight="433.0" prefWidth="953.0" spacing="25.0">
         <children>
            <TableView fx:id="checkData" prefHeight="386.0" prefWidth="893.0">
              <columns>
                <TableColumn fx:id="accountNumberCol" prefWidth="148.8962688446045" text="Account Num" />
                <TableColumn fx:id="amountCashCol" prefWidth="171.6036834716797" text="Amount of Cash" />
                  <TableColumn fx:id="withdrawOrDepositCol" prefWidth="155.51309204101562" text="Withdraw or Deposit" />
                  <TableColumn fx:id="checkNumberCol" prefWidth="184.74371337890625" text="Check Number" />
                  <TableColumn fx:id="dateCol" prefWidth="231.9588623046875" text="Check Date" />
              </columns>
               <VBox.margin>
                  <Insets left="30.0" right="30.0" />
               </VBox.margin>
            </TableView>
         </children>
      </VBox>
   </center>
   <top>
      <BorderPane prefHeight="60.0" prefWidth="753.0" BorderPane.alignment="CENTER">
         <center>
            <HBox alignment="CENTER" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="welcomeLabel" alignment="CENTER" prefHeight="29.0" prefWidth="252.0" text="Welcome, (Name)!">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </center>
         <padding>
            <Insets top="30.0" />
         </padding>
         <right>
            <Button fx:id="exitButton" mnemonicParsing="false" onAction="#exitClicked" text="Save and Exit" BorderPane.alignment="CENTER">
               <font>
                  <Font size="16.0" />
               </font>
               <BorderPane.margin>
                  <Insets right="30.0" />
               </BorderPane.margin>
               <padding>
                  <Insets bottom="10.0" left="16.0" right="16.0" top="10.0" />
               </padding>
            </Button>
         </right>
         <left>
            <Button fx:id="mainPageButton" mnemonicParsing="false" onAction="#mainPageClicked" text="Back to Main" textAlignment="CENTER" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets left="30.0" />
               </BorderPane.margin>
               <font>
                  <Font size="16.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="16.0" right="16.0" top="10.0" />
               </padding>
            </Button>
         </left>
      </BorderPane>
   </top>
   <bottom>
      <HBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="processButton" layoutX="605.0" layoutY="10.0" mnemonicParsing="false" onAction="#processClicked" text="Process Check">
               <padding>
                  <Insets bottom="10.0" left="16.0" right="16.0" top="10.0" />
               </padding>
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <TextField fx:id="checkNumber" prefHeight="29.0" prefWidth="200.0" promptText="Enter Check Number">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
            <TextField fx:id="acctNumField" layoutX="342.0" layoutY="15.0" prefHeight="29.0" prefWidth="200.0" promptText="Enter Account Number">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
            <Button fx:id="stopButton" mnemonicParsing="false" onAction="#stopClicked" text="Stop Check">
               <padding>
                  <Insets bottom="10.0" left="16.0" right="16.0" top="10.0" />
               </padding>
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <BorderPane.margin>
            <Insets left="30.0" right="30.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="30.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
